.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  font-size: 17px;
}

.navigator{
  width: 100%;
  height: 92px;
  position: fixed;
  top: 0rpx;
  z-index: 1;
}

.block-title {
  width: 100%;
  height: 50px;
  background-color: #f2f8fd;
}

.title {
  height: 42px;
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 0 5%;
  font-size: 40rpx;
  background-color: #f2f8fd;
}

.title image {
  height: 55rpx;
  width: 55rpx;
  padding: 2%;
}

.title text {
  padding: 1% 19%;
}

.acc-inorout {
  height: 10%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 92px;
  padding: 2% 0;
  font-size: 40rpx;
  color: #777777;
}
 
 .on{
  color: #1296db;
  border-bottom: 5rpx solid #1296db;
 }
 
.swiper-box{
  display: block;
  height: 530px;
  width: 100%;
  overflow: hidden;
 }

 /* 滑动修改删除样式 */
.se-mv {
  width: 100%;
  height: 135rpx;
}

.se_list {
  width: 120%;
  height: 135rpx;
}

.se-box {
  display: flex;
  justify-content: flex-start;
  justify-items: center;
  width: 100%;
  height: 135rpx;
}

/* 每条信息样式 */
.info {
  width: 83%;
  height: 93rpx;
  padding: 2% 5%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  line-height: 95rpx;
  font-size: 17px;
}

/* 删除选项 */
.delete {
  width: 11%;
  height: 93rpx;
  padding: 2% 2% 2% 4%;
  color: white;
  background-color: red;
  line-height: 100rpx;
}

/* 预设支出样式 */
.specialex {
  background-color: #f2f8fd;
  width: 100%;
  height: 135rpx;
  /* border-top: 2rpx solid #1296db; */
}

/* 预设收入样式 */
.specialin {
  background-color: #f2f8fd;
  width: 100%;
  height: 135rpx;
  /* border-top: 2rpx solid #1296db; */
}

/* 统一账目样式 */
.specialex image,
.specialin image {
  padding: 0 6% 0 2%;
  width: 85rpx;
  height: 85rpx;
  /* border-radius: 100%; */
}

.specialex text,
.specialin text {
  height: 100%;
  padding-left:2%;
}

.name {
  width: 20%;
}

.date {
  width: 15%;
  line-height: 150rpx;
  color: gray;
  font-size: 25rpx;
}

/* .remarks {
  width: 35%;
